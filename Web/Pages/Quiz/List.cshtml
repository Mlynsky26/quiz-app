@page ""
@model BackendLab01.Pages.QuizList
@{
    ViewData["Title"] = "Quiz List";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

@if (Model.Quizzes is not null && Model.Quizzes.Count != 0)
{
    <table class="table table-striped">
        <tr>
            <th>Quiz title</th>
            <th>Actions</th>
        </tr>

    @foreach (var item in Model.Quizzes)
    {
       <tr>
           <td>@item.Title</td>
           <td>
                <a class="btn btn-primary" asp-area="" asp-page="/Quiz/Item" asp-route-itemId="1" asp-route-quizId="@item.Id">Show</a>
           </td>
       </tr>
    }
    </table>

}
else
{
    <h3>No quizzes</h3>
}